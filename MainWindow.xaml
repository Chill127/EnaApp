<Window
    x:Class="EnaApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Ena" Height="600" Width="300"
    WindowStyle="None"
    AllowsTransparency="True"
    Background="Transparent"
    Topmost="True"
    MouseDown="Window_MouseDown">

    <Grid>
        <!-- キャラクター立ち絵 -->
        <Image x:Name="EnaImage"
               Source="ena.png"
               Stretch="Uniform"
               MouseRightButtonDown="EnaImage_RightClick" Margin="-10,0,0,4" />

        <!-- セリフテキスト -->
        <TextBlock x:Name="SerifText"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom"
               FontSize="16"
               Foreground="White"
               Background="#80000000"
               Padding="10"
               TextAlignment="Center"
               Visibility="Collapsed"
               TextWrapping="Wrap" />
    </Grid>
</Window>